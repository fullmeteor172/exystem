################################################################################
# Development Secrets Example
#
# Copy this file to dev.yaml and fill in your secrets.
# NEVER commit the actual secrets file!
#
# For production use, consider using:
# - SOPS for encrypted secrets: https://github.com/mozilla/sops
# - AWS Secrets Manager with External Secrets Operator
# - HashiCorp Vault
################################################################################

# Cloudflare credentials
cloudflareApiToken: "your-cloudflare-api-token"
cloudflareZoneId: "your-zone-id"

# Grafana admin password (optional - auto-generated if empty)
grafana:
  adminPassword: ""

# ArgoCD admin password (optional - auto-generated if empty)
argocd:
  adminPassword: ""

# ACME (Let's Encrypt) settings
acme:
  email: "admin@example.com"
  server: "https://acme-v02.api.letsencrypt.org/directory"
