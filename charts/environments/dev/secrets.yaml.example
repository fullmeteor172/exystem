################################################################################
# Development Secrets
#
# Copy this file to secrets.yaml and fill in your values:
#   cp secrets.yaml.example secrets.yaml
#
# NEVER commit secrets.yaml to git!
#
# For production, encrypt with SOPS:
#   sops -e secrets.yaml.example > secrets.yaml
################################################################################

#-------------------------------------------------------------------------------
# Cloudflare Credentials (for DNS and certificates)
#-------------------------------------------------------------------------------
cloudflare:
  apiToken: "your-cloudflare-api-token"
  zoneId: "your-zone-id"                    # Optional

#-------------------------------------------------------------------------------
# ACME (Let's Encrypt) Configuration
#-------------------------------------------------------------------------------
acme:
  email: "admin@example.com"                # CHANGE: Your email for cert notifications
  server: "https://acme-staging-v02.api.letsencrypt.org/directory"  # Use staging for dev

#-------------------------------------------------------------------------------
# Application Credentials
# Leave empty for auto-generated passwords, or set specific values
#-------------------------------------------------------------------------------
grafana:
  adminPassword: ""                         # Empty = auto-generated

argocd:
  adminPassword: ""                         # Empty = auto-generated (use: argocd admin initial-password)
