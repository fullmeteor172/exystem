################################################################################
# Development Secrets
#
# Copy this file to secrets.yaml and fill in your values:
#   cp secrets.yaml.example secrets.yaml
#
# NEVER commit secrets.yaml to git!
#
# For production, encrypt with SOPS:
#   sops -e secrets.yaml.example > secrets.yaml
################################################################################

#-------------------------------------------------------------------------------
# Cloudflare Credentials (for DNS and certificates)
#-------------------------------------------------------------------------------
cloudflare:
  apiToken: "your-cloudflare-api-token"
  zoneId: "your-zone-id"                    # Optional

#-------------------------------------------------------------------------------
# ACME (Let's Encrypt) Configuration
#-------------------------------------------------------------------------------
acme:
  email: "admin@example.com"                # CHANGE: Your email
  server: "https://acme-staging-v02.api.letsencrypt.org/directory"  # Staging for dev

#-------------------------------------------------------------------------------
# Platform Credentials
# Leave empty for auto-generated passwords
#-------------------------------------------------------------------------------
grafana:
  adminPassword: ""

argocd:
  adminPassword: ""

#-------------------------------------------------------------------------------
# Application Secrets
#
# Add secrets for your apps here. These get passed to helmfile values.
#-------------------------------------------------------------------------------
apps:
  example:
    database:
      # Password from Terraform RDS output / AWS Secrets Manager
      password: ""
    redis:
      # Password from Terraform ElastiCache (if auth enabled)
      password: ""
