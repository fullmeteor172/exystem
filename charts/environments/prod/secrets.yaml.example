################################################################################
# Production Secrets
#
# CRITICAL: Use SOPS encryption for production secrets!
#
# Setup SOPS:
#   1. Create a KMS key or use age/PGP
#   2. Create .sops.yaml in repo root
#   3. Encrypt: sops -e secrets.yaml.example > secrets.yaml
#
# Alternatively, use External Secrets Operator with AWS Secrets Manager.
################################################################################

#-------------------------------------------------------------------------------
# Cloudflare Credentials
#-------------------------------------------------------------------------------
cloudflare:
  apiToken: "your-cloudflare-api-token"
  zoneId: "your-zone-id"

#-------------------------------------------------------------------------------
# ACME (Let's Encrypt) Configuration
#-------------------------------------------------------------------------------
acme:
  email: "admin@example.com"    # CHANGE: Real email for cert expiry alerts
  server: "https://acme-v02.api.letsencrypt.org/directory"

#-------------------------------------------------------------------------------
# Application Credentials
# In production, strongly consider using a password manager or vault
#-------------------------------------------------------------------------------
grafana:
  adminPassword: ""             # Set a strong password or leave empty

argocd:
  adminPassword: ""
